<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Update Shop</title>
  </head>
  <body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container">
		  <a class="navbar-brand" href="#">Sign In</a>
		  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		  </button>
		  <div class="collapse navbar-collapse" id="navbarNavDropdown">
			<ul class="navbar-nav">
			  <li class="nav-item">
				<a class="nav-link active" aria-current="page" href="/shops">All Shops</a>
			  </li>	
			</ul>
		  </div>
		</div>
	  </nav>
	  <div class="container"> 
		</div>
	  </nav>
	
	<div class="container"> 
    <form id="updateShop"> <!-- sent to script js-->
		<div class="mb-3">
			<label for="exampleInputPassword1" class="form-label">Shop Name</label>
			<input name="shopName" value="<%= info.shopName %>" type="text" class="form-control" id="exampleInputEmail1">
		</div>

		<div class="mb-3">
			<select name="shopType" class="form-select" aria-label="Default select example">
				<% 
				const types = ["apparel", "food", "service"];
				for (let i=0; i<types.length; i++){
					const selected = (info.shopType == types[i]) ? "selected" : "";
					%> <option value= "<%= types[i] %>" <%= selected %> > <%= types[i] %></option>
				<% } %>
			  </select>
		</div>

		<div class="mb-3">
			<select name="shopZone" class="form-select" aria-label="Default select example">
				<% 
				const opt = ["zone 1", "zone 2", "zone 3"];
				for (let i=0; i<opt.length; i++){
					const selected = (info.shopZone == opt[i]) ? "selected" : "";
					%> <option value= "<%= opt[i] %>" <%= selected %> > <%= opt[i] %></option>
				<% } %>
			  </select>
		</div>
		
		<div class="mb-3">
		  <label for="exampleInputPassword1" class="form-label">Shop Owner</label>
		  <input type="text" value="<%= info.shopOwner %>" name="shopOwner" class="form-control" id="exampleInputEmail1">
		</div>

		<div class="mb-3">
			<label for="exampleInputPassword1" class="form-label">Shop Contact</label>
			<input type="text" value="<%= info.shopContact %>" name="shopContact" class="form-control" id="exampleInputPassword1">
		</div>
		
		<button type="submit" class="btn btn-dark">UPDATE</button>
	  </form>
	  </div>

	  <script src="/js/script.js"></script>
	</body>

</html>